<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp">
    <ImageView
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:layout_width="500px"
        android:layout_height="500px"
        android:src="@drawable/img_change_password"/>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Mật khẩu cũ"
        app:hintTextColor = "@color/primary_color"
        android:textColorHint = "@color/primary_color"
        app:boxStrokeColor = "@color/primary_color"
        android:id="@+id/input_old_pass"
        app:endIconMode="password_toggle"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:id="@+id/ed_old_password_change"
            android:inputType="textPassword"
            />

    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Mật khẩu"
        android:id="@+id/input_pass_changpass"
        app:endIconMode="password_toggle"
        app:hintTextColor = "@color/primary_color"
        android:textColorHint = "@color/primary_color"
        app:boxStrokeColor = "@color/primary_color">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:id="@+id/ed_password_change"
            android:inputType="textPassword"
            />

    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nhập lại mật khẩu"
        app:endIconMode="password_toggle"
        app:hintTextColor = "@color/primary_color"
        android:id="@+id/input_repass_changpass"
        android:textColorHint = "@color/primary_color"
        app:boxStrokeColor = "@color/primary_color">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:inputType="textPassword"
            android:id="@+id/ed_repassword_change"
            />

    </com.google.android.material.textfield.TextInputLayout>
    <TextView
        android:layout_marginLeft="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/check_trung_changpass"/>
    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_change_pass"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_login"
            android:text="Thay đổi"
            android:textStyle="bold"
            android:textColor="@color/white"
            app:backgroundTint="@color/primary_color" />
    </LinearLayout>
</LinearLayout>